@model BookstoreManagement.Models.Book
<h1>Edit Book</h1>

<form asp-action="Edit" method="Post">

    <div class="form-group">
        <label asp-for="BookId"></label>
        <input asp-for="@Model.BookId" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="@Model.Title" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Author"></label>
        <input asp-for="@Model.Author" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="@Model.Price" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Genre"></label>
        <input asp-for="@Model.Genre" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Edit</button>
</form>

